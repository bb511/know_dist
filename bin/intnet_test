#!/usr/bin/env python

# Run the testing of the interaction network.
import argparse
import sys
sys.path.append("..")

from intnets.test import main
parser = argparse.ArgumentParser(formatter_class=argparse.
                                 ArgumentDefaultsHelpFormatter)
parser.add_argument("--data_folder", type=str, default='../../ki_data/intnet_input',
                    help="The folder where the data is stored on the system..")
parser.add_argument("--norm", type=str, default='nonorm',
                    help="The name of the normalisation that you'll to use.")
parser.add_argument("--test_events", type=int, default=-1,
                    help="The exact number of training events to use.")
parser.add_argument("--model_dir", type=str, default="./trained_intnets/test",
                    help="The output directory name.")
parser.add_argument("--gpu", type=str, default="0",
                    help="Sets the number of the GPU to run on.")
parser.add_argument("--seed", type=int, default=321,
                    help="Seed to use in shuffling the data and any other thing.")
args = parser.parse_args()


os.environ["CUDA_VISIBLE_DEVICES"] = args.gpu

data_hyperparams = {
    "data_folder":   args.data_folder,
    "norm":          args.norm,
    "train_events":  0,
    "test_events":   args.test_events,
    "pt_min":        "2",
    "nconstituents": "8"
}

args = {
    "data_hyperparams": data_hyperparams,
    "model_dir":        args.model_dir,
    "seed":             args.seed,
}

main(args)
