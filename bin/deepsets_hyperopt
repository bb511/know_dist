#!/usr/bin/env python

# Run the training of the interaction network..
import argparse
import os
import sys
sys.path.append("..")

from deepsets.hyperparam_optimisation import main
parser = argparse.ArgumentParser(formatter_class=argparse.
                                 ArgumentDefaultsHelpFormatter)
parser.add_argument("--gpu", type=str, default="",
                    help="Sets the number of the GPU to run on.")
args = parser.parse_args()

if args.gpu:
    os.environ["CUDA_VISIBLE_DEVICES"] = args.gpu

data_hyperparams = {
    "fpath":       '../../ki_data/mlready',
    "fname":       'x_jet_images_c150_pt2.0_jedinet_robust',
    "train_events": -1,
    "val_events":   -1,
    "test_events":  0,
    "jet_seed":     None,
    "seed":         None,
}

training_hyperparams = {
    "batch":        [64, 128, 256],
    "epochs":       100,
    "lr":           [0.0001, 0.001],
    "valid_split":  0.3,
}

compilation_hyperparams = {
    "optimizer": ['adam'],
    "loss":      'softmax_with_crossentropy',
    "metrics":   ['categorical_accuracy'],
}

model_hyperparams = {
    "nnodes_phi": [64, 32, 20, 16, 8],
    "nnodes_rho": [64, 32, 20, 16, 8],
    "activ": ['elu', 'selu', 'relu'],
}

args = {
    "data_hyperparams":     data_hyperparams,
    "training_hyperparams": training_hyperparams,
    "model_hyperparams":    model_hyperparams,
    "compilation":          compilation_hyperparams,
    "deepsets_type":        'equivariant',
    "outdir":               'deepsets_hyperopt',
}

main(args)
